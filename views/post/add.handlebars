<div class="row mt-5">
  <div class="col-md-8 mx-auto">

<div class="card card-body">
<h4 class="card-title">Add Post</h4>
    <form action="/post" method="POST">
<fieldset class="form-group">
<label for="first_name">Title</label>
<input type="text" class="form-control" id="first_name" name="title" required>
</fieldset>
<fieldset class="form-group">
<label for="last_name">Short desc.</label>
<input type="text" class="form-control" id="last_name" name="details" required>
</fieldset>
<fieldset class="form-group">
<label for="last_name">Full content</label>
<textarea style="width:100%" name="content"></textarea>
</fieldset>
<fieldset class="form-group">
<label for="last_name">Link</label>
<input type="text" class="form-control" id="last_name" name="link" required>
</fieldset>
<fieldset class="form-group">
<label for="last_name">Category</label>
<select class="custom-select" name="cat">
<option selected>Choose One...</option>
<option value="1">Boots</option>
<option value="2">Shoes</option>
<option value="3">Feet</option>
</select>
</fieldset>
<fieldset class="form-group">
<label for="last_name">Image</label>
<input type="file" class="form-control" id="last_name" name="image">
</fieldset>
<button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
</div>
</div>